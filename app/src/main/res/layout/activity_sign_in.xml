<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/colorSignInBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".signin.SignInActivity">

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_line_left"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="30dp"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_line_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_end="30dp"/>

    <ImageView
            android:id="@+id/signInImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_baseline_pets_24px"
            android:layout_marginTop="120dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_in_title"
            android:textSize="20sp"
            android:textColor="@color/colorSignInTitle"
            android:lineSpacingExtra="0sp"
            android:gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/signInImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/sign_in_description"
            android:textColor="@color/colorSignInTitle"
            android:textSize="14sp"
            android:lineSpacingExtra="6sp"
            android:layout_marginTop="10dp"
            android:maxLines="2"
            android:maxWidth="200dp"
            app:layout_constraintTop_toBottomOf="@id/titleText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <RelativeLayout
            android:id="@+id/signInFbButton"
            android:layout_width="300dp"
            android:layout_height="65dp"
            android:layout_marginTop="150dp"
            android:background="@drawable/rounded_button_sign_in_with_fb"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/titleText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <ImageView
                android:layout_width="15dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_facebook"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sign_in_fb"
                android:textSize="14sp"
                android:textColor="@color/colorSignIn3rdText"
                android:lineSpacingExtra="0sp"
                android:textStyle="bold"
                android:layout_centerInParent="true"/>
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/signInGoogleButton"
            android:layout_width="300dp"
            android:layout_height="65dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_button_sign_in_with_google"
            app:layout_constraintTop_toBottomOf="@id/signInFbButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_google"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sign_in_google"
                android:textSize="14sp"
                android:textColor="@color/colorSignIn3rdText"
                android:lineSpacingExtra="0sp"
                android:textStyle="bold"
                android:layout_centerInParent="true"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>